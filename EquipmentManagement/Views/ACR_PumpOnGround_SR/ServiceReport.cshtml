@model ACR_PumpOnGround_FileUploadViewModelSR
@{
    ViewData["Title"] = "PUMP ( on ground ) ";
}
<div class="content-wrapper">
    <section class="content">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-cube"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>

            <div class="box-body">
                <!-- Custom Tabs -->
                <div class="nav-tabs-custom">
                    <ul class="nav nav-tabs">
                        <li class="@Html.IsSelected(controller: MainMenu.ACR_PumpOnGround.ControllerName, action: MainMenu.ACR_PumpOnGround.ActionName)">
                            <a href="@MainMenu.ACR_PumpOnGround.Path">
                                <i class="fa fa-heartbeat"></i> <span>Equipment Daily Status</span>
                            </a>
                        </li>
                        <li class="@Html.IsSelected(controller: Tabs.ACR_PumpOnGround_PM.ControllerName, action: Tabs.ACR_PumpOnGround_PM.ActionName)">
                            <a href="@Tabs.ACR_PumpOnGround_PM.Path">
                                <i class="fa fa-gears"></i> <span>@Tabs.ACR_PumpOnGround_PM.PageName</span>
                            </a>
                        </li>
                        <li class="@Html.IsSelected(controller: Tabs.ACR_PumpOnGround_SR.ControllerName, action: Tabs.ACR_PumpOnGround_SR.ActionName)">
                            <a href="@Tabs.ACR_PumpOnGround_SR.Path">
                                <i class="fa fa-gears"></i> <span>@Tabs.ACR_PumpOnGround_SR.PageName</span>
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <!-- EQUIPMENT DAILY STATUS -->
                        <div class="tab-pane" id="tab_1">
                            EQUIPMENT DAILY STATUS CONTENT
                        </div>
                        <!-- PREVENTIVE MAINTENANCE -->
                        <div class="tab-pane" id="tab_2">
                            Preventive Maintenance Content
                        </div>
                        <!-- SERVICE REPORT -->
                        <div class="tab-pane active" id="tab_3">
                            <h4>Upload Preventive Maintenance Files</h4>
                            <hr />
                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success alert-dismissible" style="margin-top:20px">
                                    @ViewBag.Message
                                </div>
                            }
                            <form method="post" enctype="multipart/form-data">
                                <input type="file" name="files" multiple required />
                                <input type="text" style="min-width:50%" autocomplete="off" placeholder="Enter File Description" name="description" required />
                                <button class="btn btn-success" type="submit" asp-controller="ACR_PumpOnGround_SR" asp-action="UploadToDatabase">Upload</button>
                            </form>
                            <hr />

                            <hr />
                            <h4>Files Uploaded</h4>
                            @if (Model.ACR_PumpOnGround_FilesOnDatabaseSR.Count == 0)
                            {
                                <caption>No Records Found</caption>
                            }
                            else
                            {
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>File Type</th>
                                            <th>Created On</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var file in Model.ACR_PumpOnGround_FilesOnDatabaseSR)
                                        {
                                            <tr>
                                                <th>@file.Id</th>
                                                <td>@file.Name</td>
                                                <td>@file.Description</td>
                                                <td>@file.FileType</td>
                                                <td>@file.CreatedOn</td>
                                                <td>
                                                    <a type="button" class="btn btn-primary" asp-controller="ACR_PumpOnGround_SR" asp-action="DownloadFileFromDatabase" asp-route-id="@file.Id">Download</a>
                                                    <a type="button" class="btn btn-danger" asp-controller="ACR_PumpOnGround_SR" asp-action="DeleteFileFromDatabase" asp-route-id="@file.Id">Delete</a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            }
                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- nav-tabs-custom -->
            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
        </div>
    </section>
</div>