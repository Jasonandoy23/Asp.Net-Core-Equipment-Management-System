
@{
    ViewData["Title"] = "Consumables And Labware";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title text-primary"><i class="fa fa-flask"></i> @ViewData["Title"]</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                            title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="box-body">
                <div id="Grid"></div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Styles{

}

@section Scripts{

    <script type="text/javascript">
        $(function () {

            var dataManager = ej.DataManager({
                url: "/api/ConsumablesAndLabware",
                adaptor: new ej.WebApiAdaptor(),
                offline: true
            });

            var dataManagerLocation = ej.DataManager({
                url: "/api/Location",
                adaptor: new ej.WebApiAdaptor(),
                offline: true
            });

            var dataManagerStorage = ej.DataManager({
                url: "/api/Storage",
                adaptor: new ej.WebApiAdaptor()
            });

            var dataManagerStatus = ej.DataManager({
                url: "/api/Status",
                adaptor: new ej.WebApiAdaptor(),
                offline: true
            });

            var dataManagerCondition = ej.DataManager({
                url: "/api/Condition",
                adaptor: new ej.WebApiAdaptor()
            });

            var dataManagerUnitOfMeasure = ej.DataManager({
                url: "/api/UnitOfMeasure",
                adaptor: new ej.WebApiAdaptor()
            });

            dataManager.ready.done(function (e) { 
                $("#Grid").ejGrid({
                    dataSource: ej.DataManager({
                        json: e.result,
                        adaptor: new ej.remoteSaveAdaptor(),
                        insertUrl: "/api/ConsumablesAndLabware/Insert",
                        updateUrl: "/api/ConsumablesAndLabware/Update",
                        removeUrl: "/api/ConsumablesAndLabware/Remove",
                    }),
                    toolbarSettings: {
                        showToolbar: true,
                        toolbarItems: ["add", "edit", "delete", "update", "cancel", "search", "printGrid"]
                    },
                    editSettings: {
                        allowEditing: true,
                        allowAdding: true,
                        allowDeleting: true,
                        showDeleteConfirmDialog: true,
                        editMode: "dialog"
                    },
                    isResponsive: true,
                    enableResponsiveRow: true,
                    allowSorting: true,
                    allowSearching: true,
                    allowFiltering: true,
                    filterSettings: {
                        filterType: "excel",
                        maxFilterChoices: 100,
                        enableCaseSensitivity: false
                    },
                    allowPaging: true,
                    pageSettings: { pageSize: 10, printMode: ej.Grid.PrintMode.CurrentPage },
                    columns: [
                        { field: "CL_id", headerText: 'CL_id', isPrimaryKey: true, isIdentity: true, visible: false },
                        { field: "CL_name", headerText: 'Name', validationRules: { required: true } },
                        { field: "Location_id", headerText: 'Location', foreignKeyField: "Location_id", foreignKeyValue: "Location_name", dataSource: dataManagerLocation},
                        { field: "Storage_id", headerText: 'Freezer/Compartment', foreignKeyField: "Storage_id", foreignKeyValue: "Storage_name", dataSource: dataManagerStorage},
                        { field: "CL_layerCompartment", headerText: 'Layer/Compartment', },                        
                        { field: "CL_storageTemp", headerText: 'Storage Temp', },
                        { field: "Condition_id", headerText: 'Condition', foreignKeyField: "Condition_id", foreignKeyValue: "Condition_name", dataSource: dataManagerCondition},
                        { field: "CL_expiryDate", headerText: 'Expiry Date', editType: "datepicker", format: "{0:MM/dd/yyyy}", validationRules: { required: true } },
                        { field: "CL_partNo", headerText: 'Part No.', },
                        { field: "Status_id", headerText: 'Status', foreignKeyField: "Status_id", foreignKeyValue: "Status_name", dataSource: dataManagerStatus},
                        { field: "CL_statusDate", headerText: 'Status Date', editType: "datepicker", format: "{0:MM/dd/yyyy}", validationRules: { required: true } },
                        { field: "CL_qtyOnhand", headerText: 'Quantity', editType: "numericedit", validationRules: { required: true } },
                        { field: "UnitOfMeasure_id", headerText: 'UOM', foreignKeyField: "UnitOfMeasure_id", foreignKeyValue: "UnitOfMeasure_name", dataSource: dataManagerUnitOfMeasure, validationRules: { required: true } },
                    ],
                    actionComplete: "complete",
                });

            });

            
        });

        function complete(args) {
            if (args.requestType == 'beginedit') {
                $("#" + this._id + "_dialogEdit").ejDialog({ title: "Edit Record" });
            }
        }


    </script>
}

